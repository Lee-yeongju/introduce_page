<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    >

        <Button
            android:id="@+id/btn_menu"
            android:background="@drawable/menu_image"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"    >

            <ImageView
                android:layout_marginLeft="30dp"
                android:background="@drawable/main"
                android:layout_width="180dp"
                android:layout_height="50dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_find"
            android:background="@drawable/find"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"   />

        <Button
            android:id="@+id/btn_person"
            android:background="@drawable/person"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"   >

        <Button
            android:id="@+id/btn_back"
            android:background="@drawable/menu_image"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"  />

        <Button
            android:id="@+id/btn_home"
            android:background="@drawable/find"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"  />


        <TextView
            android:id="@+id/text_introduce"
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="상품소개"
            android:textColor="#6B9080"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/btn_share"
            android:background="@drawable/share_light"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"  />

        <Button
            android:id="@+id/btn_cart"
            android:background="@drawable/cart_light"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"  />

    </LinearLayout>

    <ScrollView

        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="550dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/peach" />

            <TextView
                android:id="@+id/text_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[경북청도] 청도하우스 황도 백도 엄선된 금복숭아 4개입 700g"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_funding_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[펀딩 진행률]"
                android:textColor="#6B9080"
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:progress="25" />

            <ImageView
                android:id="@+id/image_product_explain"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="@drawable/peach_explain" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_heart"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/heart_light" />

        <Button
            android:id="@+id/btn_fund"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="#98C9A3"
            android:text="펀딩하기" />

        <Button
            android:id="@+id/btn_in_cart"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="#98C9A3"
            android:text="장바구니" />


    </LinearLayout>



</LinearLayout>